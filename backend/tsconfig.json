{
  "compilerOptions": {
    "target": "es5",
    "module": "system",
    "strict": true,
    "noImplicitAny": false,
    "sourceMap" : false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck" : true,
    "rootDir": "./backend/web/src/ts",
    "outDir": "./web/js/built",
    "types": [
      "node"
    ],
    "typeRoots": [
      "../node_modules/@types"
    ]
  },
  "exclude": [
    "../node_modules",
    "typings/main.d.ts",
    "typings/main"
  ]
}